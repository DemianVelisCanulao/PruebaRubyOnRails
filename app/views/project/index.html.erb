
    <h1>Mis proyectos</h1> 
    <%= link_to 'Nuevo Proyecto', new_project_path, class: 'button-link' %>

    <ul>
        <% @projects.each do |project| %>
            <li class="project-container">
            <h2><%= link_to project.title, project %></h2>
            <%= link_to 'Editar', edit_project_path(project), class: 'edit-link' %>
            <%= link_to 'Eliminar', project, class: 'delete-link', data: {  turbo_method: "delete", turbo_confirm: '¿Estás seguro de eliminar el proyecto?'} %>
            </li>   
        <% end %>
    </ul>

