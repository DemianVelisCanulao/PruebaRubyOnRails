<%= form_with(model: [task.project, task], data: { turbo_frame: "task_frame_#{task.id}" }) do |f| %>
  <%= f.text_field :title, value: task.title, data: { target: "task.title", action: "blur->task#save" } %>
  <%= link_to 'Eliminar', project_task_path(task.project, task), method: :delete, remote: true, data: { turbo_confirm: "¿Estás seguro?" } %>
<% end %>